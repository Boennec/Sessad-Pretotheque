{% extends 'base.html.twig' %}

{% block title %}Les articles Sessad-Pretotheque
{% endblock %}

{% block content %}

	<div class="row">
		<div class="col-md-3">
			<h2>Filtrer</h2>
			{{ form(form) }}

			</div>
			<div class="col-md-9">
				<h2>Les Articles</h2>

				<div class="row">
					{% for article in articles %}
						<div class="col-md-4">
							<div class="product-item text-center">
								<a href="{{ path('article', { 'slug' : article.slug}) }}"><img src="/uploads/{{ article.imageURL }}" alt="{{ article.name }}" class="img-fluid"></a>
								<h5>{{ article.name }}</h5>
								<span class="product-price">{{ (article.prix/ 100) |number_format(2, ',', '.') }}
									â‚¬</span>

							</div>
						</div>
					{% endfor %}
				</div>

			</div>
		</div>
	{% endblock %}
